@{
}

<div>
	<span><a href="/Book/Add">Add new book</a></span>
</div>
@foreach (var b in Model)
	{
	<div>
		<span>@b.ID</span>
		<span>@b.Title</span>
		<span>@b.Author</span>
		<span>@b.Description</span>
		<span><a href="/Book/Remove?id=@b.ID">Remove</a></span>
		<span><a href="/Book/AddToFavorite?id=@b.ID">Add to Favorite</a></span>
	</div>
	}